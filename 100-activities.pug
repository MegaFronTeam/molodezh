								a(href='#') #[span МОСКВА ]
								| и 
								a(href='#') #[span ВЛАДИВОСТОК].
								| <br>В конкурсном отборе участвовало 18 городов
							.descr__sub-text Узнать о мероприятиях, проектах, пространствах в Молодёжных столицах России – 2024 можно на сайтах городов
						.descr__cards-wrap
							mixin cardCity(img, title)
								a.card-city(href='#')
									img(src=`assets/img/activities/city-${img}.png` alt='')
									.card-city__wrap
										.card-city__title!= title
										button.card-city__btn.btn.btn--secondary Перейти
							+cardCity(1, 'Москва')
							+cardCity(2, 'Владивосток')
				section.section.news
					.container
						h2 Новости Молодёжных столиц России
						.news__cards-wrap
							mixin newsCards(img, text)
								a.news-card(href='#')
									.news-card__img-wrap
										img(src=`assets/img/activities/news-${img}.png` alt='')
									.news-card__icon-wrap
										svg.icon
											use(href='./assets/svg/sprite-version2.svg#city')
									.news-card__text-wrap
										.news-card__date 18 июля 2022
											span 17:19
										.news-card__text!= text
							+newsCards(1, 'Участники «Территории смыслов» узнали, как вывести российские НКО на международную арену')
							+newsCards(2, 'Участники «Территории смыслов» узнали, как вывести российские НКО на международную арену')
